<?xml version="1.0"?>
<config>
    <api>
        <resources>
            <sales_order translate="title" module="sales">
                <model>folio3_sales_model_order_api</model>
                <title>New Sales Order API</title>
                <methods>
                    <getSalesOrderInfo translate="title" module="sales">
                        <title>Retrieve Sales Order Info from its increment ID</title>
                        <acl>sales/order/info</acl>
                    </getSalesOrderInfo>
                    <createSalesOrder translate="title" module="sales">
                        <title>Create Sales Order</title>
                        <acl>sales/order/create</acl>
                    </createSalesOrder>
                </methods>
            </sales_order>
        </resources>
        <v2>
            <resources_function_prefix>
                <sales_order>folio3_salesOrder</sales_order>
            </resources_function_prefix>
        </v2>
    </api>
</config>
